{
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "uniquness": true
            },
            "bot": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["slack", "debug", "teams"]
                },
                "options": {
                  "type": "object",
                  "properties": {
                    "slack": {
                      "type": "object",
                      "properties": {
                        "channelId": {
                          "type": "string"
                        },
                        "token": {
                          "type": "string"
                        },
                        "userName": {
                          "type": "string"
                        },
                        "iconUrl": {
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": ["channelId", "token", "userName"]
                    },
                    "debug": {
                      "type": "object",
                      "properties": {
                        "userName": {
                          "type": "string"
                        }
                      },
                      "required": ["userName"]
                    },
                    "teams": {
                      "type": "object",
                      "properties": {
                        "webhook": {
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": ["webhook"]
                    }
                  }
                }
              },
              "required": ["type", "options"]
            },
            "variables": {
              "type": "array",
              "items": {
                "type": "object",
                "uniquness": true,
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["static", "dynamic"]
                  },
                  "key": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["type", "key", "value"]
              }
            },
            "schedules": {
              "type": "array",
              "items": {
                "type": "object",
                "uniquness": true,
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": ["sequence", "random"]
                  },
                  "cron": {
                    "type": "string"
                  },
                  "texts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "overrideObjects": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    }
                  }
                },
                "required": ["mode", "cron"]
              }
            }
          },
          "required": ["name","bot", "variables", "schedules"]
        }
      }
    },
    "required": ["tasks"]
}
